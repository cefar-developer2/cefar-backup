        "id": "columns_desktop",
        "min": 2,
        "max": 5,
        "step": 1,
        "default": 3,
        "label": "Columns on desktop"
      },
      {
        "type": "range",
        "id": "columns_mobile",
        "min": 1,
        "max": 3,
        "step": 1,
        "default": 1,
        "label": "Columns on mobile"
      },
      {
        "type": "header",
        "content": "File Download"
      },
      {
        "id": "button_label",
        "type": "text",
        "label": "Button label",
        "default": "Download Resource"
      },
      {
        "type": "url",
        "id": "button_link",
        "label": "File download URL"
      }
    ],
    "blocks": [
      {
        "name": "Block",
        "type": "block",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "text",
            "id": "heading",
            "label": "Item",
            "default": "Heading"
          },
          {
            "type": "richtext",
            "id": "description",
            "label": "Description",
            "default": "<p>Enter description here</p>"
          },
          {
            "type": "header",
            "content": "Video"
          },
          {
            "type": "url",
            "id": "video",
            "label": "Add the video file URL here"
          },
          {
            "type": "checkbox",
            "id": "autoplay_video",
            "label": "Autoplay video",
            "default": true
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Content Row",
        "category": "Custom",
        "blocks": [
          {
            "type": "block"
          },
          {
            "type": "block"
          },
          {
            "type": "block"
          }
        ]
      }
    ]
  }
{% endschema %}
