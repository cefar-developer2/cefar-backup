{% if paginate.pages > 1 %}
    <div class="flex justify-center pt-4">
        <div class="border-opacity-10 w-full max-w-xs border-t border-black"></div>
    </div>
    <div class="pagination flex items-center justify-center pt-10">
        {% if paginate.previous %}
            <a class="prev hover:text-pink text-base transition duration-300" href="{{ paginate.previous.url }}"><i class="fal fa-arrow-left"></i></a>
        {% else %}
            <span class="prev opacity-10 inline-block text-base"><i class="fal fa-arrow-left"></i></span>
        {% endif %}
        
        <span class="pagecount font-body inline-block mx-3 text-sm" style="letter-spacing: 4px;">{{ paginate.current_page }}/{{ paginate.pages }}</span>
        
        {% if paginate.next %}
            <a class="next hover:text-pink text-base transition duration-300" href="{{ paginate.next.url }}"><i class="fal fa-arrow-right"></i></a>
        {% else %}
            <span class="next opacity-10 inline-block text-base"><i class="fal fa-arrow-right"></i></span>
        {% endif %}
    </div>
{% endif %}