        "default": "<p>Add your text here</p>"
      },
      {
        "type": "header",
        "content": "Layout Settings"
      },
      {
        "type": "select",
        "id": "background",
        "label": "Background Colour",
        "options": [
          {
            "value": "light",
            "label": "Light"
          },
          {
            "value": "white",
            "label": "White"
          },
          {
            "value": "palepink",
            "label": "Pale Pink"
          },
          {
            "value": "black",
